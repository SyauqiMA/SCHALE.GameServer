{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AppSettings",
  "type": "object",
  "properties": {
    "Kestrel": {
      "$ref": "https://json.schemastore.org/appsettings.json#/definitions/kestrel"
    },
    "Serilog": {
      "$ref": "https://json.schemastore.org/appsettings.json#/definitions/Serilog"
    },
    "ConnectionStrings": {
      "$ref": "https://json.schemastore.org/appsettings.json#/definitions/connectionStrings"
    },
    "AllowedHosts": {
      "$ref": "https://json.schemastore.org/appsettings.json#/definitions/allowedHosts"
    },
    "SQL Provider": {
      "type": "string",
      "enum": [
        "SQLServer",
        "SQLite3"
      ]
    },
    "Resources": {
      "type": "object",
      "properties": {
        "Folder": {
          "description": "The absolute path of the resources folder. The folder has to exist.",
          "type": "string"
        },
        "Version": {
          "description": "The official resource version to download when files are not hijacked.",
          "type": "string"
        }
      }
    },
    "IRC": {
      "type": "object",
      "properties": {
        "IP": {
          "description": "The IP that hosts the IRC server.",
          "type": "string"
        },
        "Port": {
          "description": "The port used for the IRC server.",
          "type": "number"
        }
      }
    }
  }
}